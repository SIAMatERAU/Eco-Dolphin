#include "SparkFunIMU.h"
#include "Raspberry.h"
#include <string.h>


char xx[8],yy[8],zz[8];
char data_pc[5];
int thr[4];

void setup()
{
  Raspberry_Init();
  //Serial.begin(SparkFun_IMU_Baud_Rate);
  SparkFun_IMU_Init();
}

void loop()
{
  Read_Serial_0(data_pc);
  if(strcmp(data_pc,"1")==0)
  {
      IMU_Data(Accel,xx,yy,zz);
      Serial.print(xx);

  }
   else if(strcmp(data_pc,"2")==0)
  {
      IMU_Data(Accel,xx,yy,zz);

      Serial.print(yy);

  }

   else if(strcmp(data_pc,"3")==0)
  {
      IMU_Data(Accel,xx,yy,zz);

      Serial.println(zz);
  }
  else if(strcmp(data_pc,"4")==0)
        {
            IMU_Data(Magn,xx,yy,zz);
            Serial.print(xx);

         }
        else if(strcmp(data_pc,"5")==0)
            {
                IMU_Data(Gyro,xx,yy,zz);
                Serial.print(xx);
                Serial.print("\t");
                Serial.print(yy);
                Serial.print("\t");
                Serial.println(zz);
             }
      else if(strcmp(data_pc,"6")==0) {
        Serial.print("Right: ");
        thr[0]=1550
        thr[1]=1500
        thr[2]=1500
        thr[3]=1500
      }
      else if(strcmp(data_pc,"7")==0) {
      Serial.print("Left: ");
        thr[0]=1500
        thr[1]=1610
        thr[2]=1500
        thr[3]=1500
      }
      else if(strcmp(data_pc,"8")==0) {
      Serial.print("Rise: ");
        thr[0]=1500
        thr[1]=1500
        thr[2]=1500
        thr[3]=1500
      }
      else if(strcmp(data_pc,"9")==0) {
      Serial.print("Dive: ");
        thr[0]=1500
        thr[1]=1500
        thr[2]=1500
        thr[3]=1500
      }
      else if(strcmp(data_pc,"10")==0) {
      Serial.print("Idle: ");
        thr[0]=1500
        thr[1]=1500
        thr[2]=1500
        thr[3]=1500
      }
      else if(strcmp(data_pc,"11")==0) {
      }
      else if(strcmp(data_pc,"12")==0) {
      Serial.print("Forward: ");
        thr[0]=1550
        thr[1]=1610
        thr[2]=1500
        thr[3]=1500
      }
      else if(strcmp(data_pc,"13")==0) {
      Serial.print("Backward: ");
        thr[0]=1610
        thr[1]=1550
        thr[2]=1500
        thr[3]=1500
      }

  strcpy(data_pc,"");
/*  IMU_Data(Accel,xx,yy,zz);
  Serial.print("Accel: ");
  Serial.print(xx);
  Serial.print("\t");
  Serial.print(yy);
  Serial.print("\t");
  Serial.println(zz);
  delay(1000);  */
}
